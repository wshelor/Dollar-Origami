<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"> 
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_gravity="fill|bottom|top" android:gravity="fill|bottom|top">

    <ImageView
        android:id="@+id/KitchenCopilotGoldIcon"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:src="@drawable/icon" />

    <ImageView android:layout_width="fill_parent" android:id="@+id/imageView1" 
        android:src="@drawable/title" android:layout_marginTop="5dip" 
        android:layout_height="wrap_content" android:layout_below="@+id/KitchenCopilotGoldIcon"/>

    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent" 
        android:gravity="center" android:layout_height="fill_parent" 
        android:layout_below="@+id/imageView1" android:layout_alignLeft="@+id/imageView1" 
        android:layout_alignRight="@+id/imageView1">

    <Button android:id="@+id/startbutton"
		android:text="Start"
		android:textColor="#F3F8F4"
		android:textSize="30sp"
		android:layout_marginTop="10dip" 
		android:layout_width="270dp"
		android:layout_height="60dp"
		android:background="@drawable/buttonshape"
		android:shadowColor="#969696"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="5"/>
    <Button android:id="@+id/aboutbutton"
		android:text="About"
		android:layout_below="@+id/startbutton"
		android:layout_marginTop="25dip" 
		android:textColor="#F3F8F4"
		android:textSize="30sp"
		android:layout_width="270dp"
		android:layout_height="60dp"
		android:background="@drawable/buttonshape"
		android:shadowColor="#969696"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="5"/>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>